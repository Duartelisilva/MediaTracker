<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Mode Colors -->
    <Color x:Key="BackgroundColor">#1E1E1E</Color>
    <!-- window background -->
    <Color x:Key="CardColor">#2C2C2C</Color>
    <!-- tab / card background -->
    <Color x:Key="TextColor">#EEEEEE</Color>
    <!-- text color -->

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>

    <!-- TabItem specific brushes -->
    <SolidColorBrush x:Key="TabHoverBrush" Color="#1C3D7A"/>
    <!-- slightly lighter on hover -->
    <SolidColorBrush x:Key="TabSelectedBrush" Color="#404040"/>
    <!-- selected tab -->
    <SolidColorBrush x:Key="TabBorderBrush" Color="White"/>
    <!-- white border for high contrast -->
    <SolidColorBrush x:Key="DarkModeButtonBorderBrush" Color="White"/>
</ResourceDictionary>
