<Window x:Class="MediaTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MediaTracker.Views"
        xmlns:vm="clr-namespace:MediaTracker.ViewModels"
        xmlns:converters="clr-namespace:MediaTracker.Converters"
        Title="Media Tracker" Height="500" Width="800">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:BoolToSunMoonConverter x:Key="BoolToSunMoonConverter"/>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Top bar -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
            <Button Command="{Binding ToggleDarkModeCommand}"
                    Content="{Binding IsDarkMode, Converter={StaticResource BoolToSunMoonConverter}}"
                    FontSize="18" Padding="6" ToolTip="Toggle dark/light mode"/>
        </StackPanel>

        <!-- Main content -->
        <TabControl ItemsSource="{Binding Tabs}"
            Background="{DynamicResource BackgroundBrush}">

            <!-- Tab headers -->
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{DynamicResource CardBrush}" Padding="8">
                        <TextBlock Text="{Binding Header}"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextBrush}"/>
                    </Border>
                </DataTemplate>
            </TabControl.ItemTemplate>

            <!-- Tab content -->
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>

            <!-- Map ViewModels to Views -->
            <TabControl.Resources>
                <DataTemplate DataType="{x:Type vm:MoviesTabViewModel}">
                    <views:MoviesTabView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:SeriesTabViewModel}">
                    <views:SeriesTabView/>
                </DataTemplate>
            </TabControl.Resources>
        </TabControl>
    </DockPanel>
</Window>
