<Window x:Class="MediaTracker.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:views="clr-namespace:MediaTracker.Views" xmlns:vm="clr-namespace:MediaTracker.ViewModels" Title="Media Tracker" Height="500" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <TabControl ItemsSource="{Binding Tabs}">
            <!-- Tab headers -->
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}" FontWeight="Bold" Padding="5"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <!-- Tab content -->
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
            <!-- Map ViewModels to Views -->
            <TabControl.Resources>
                <DataTemplate DataType="{x:Type vm:MoviesTabViewModel}">
                    <views:MoviesTabView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:SeriesTabViewModel}">
                    <views:SeriesTabView/>
                </DataTemplate>
            </TabControl.Resources>
        </TabControl>
    </Grid>
</Window>