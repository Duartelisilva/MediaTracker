<Application x:Class="MediaTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MediaTracker.ViewModels"
             xmlns:views="clr-namespace:MediaTracker.Views">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- default theme -->
                <ResourceDictionary Source="Themes/Light.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Maps ViewModel → View -->
            <DataTemplate DataType="{x:Type vm:MoviesTabViewModel}">
                <views:MoviesTabView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SeriesTabViewModel}">
                <views:SeriesTabView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
